---
export interface Props {
  headers: string[];
}

const { headers } = Astro.props;
---

<div class="my-8 overflow-hidden rounded-lg border border-(--color-border)">
  <table class="w-full">
    <thead class="bg-(--color-hover)">
      <tr>
        {headers.map(header => (
          <th class="px-6 py-3 text-left text-sm font-semibold text-(--color-text-primary)">
            {header}
          </th>
        ))}
      </tr>
    </thead>
    <tbody class="divide-y divide-(--color-border)">
      <slot />
    </tbody>
  </table>
</div>
