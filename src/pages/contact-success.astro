---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Message Sent | The Best QR Generator" description="Thank you for contacting us.">
  <div class="mx-auto max-w-2xl py-24 sm:py-32 text-center">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        Thank You!
      </h1>
      <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-300">
        We have received your message and will get back to you as soon as possible.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/"
          class="rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-offset-2 focus-visible:outline-blue-600"
        >
          Go back home
        </a>
      </div>
  </div>
</MainLayout>
