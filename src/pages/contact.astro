---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout 
  title="Contact Us | The Best QR Generator" 
  description="Have questions or feedback? Contact the team at The Best QR Generator."
>
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:px-8">
    <div class="mb-10 text-center">
      <h1 class="text-3xl font-bold tracking-tight text-(--color-text-primary) sm:text-4xl">
        Contact Us
      </h1>
      <p class="mt-4 text-lg leading-8 text-(--color-text-muted)">
        Have a question, suggestion, or just want to say hello? We'd love to hear from you.
      </p>
    </div>

      <form 
        name="contact" 
        method="POST" 
        action="/contact-success" 
        data-netlify="true"
        class="space-y-6"
      >
        <!-- Netlify Form Handling -->
        <input type="hidden" name="form-name" value="contact" />

        <!-- Name Field -->
        <div>
          <label for="name" class="block text-sm font-medium leading-6 text-(--color-text-primary)">
            Name
          </label>
          <div class="mt-2">
            <input
              type="text"
              name="name"
              id="name"
              autocomplete="name"
              required
              class="block w-full rounded-md border border-(--color-border) bg-(--color-background) px-3.5 py-2 text-(--color-text-primary) shadow-sm placeholder:text-(--color-text-muted) focus:ring-2 focus:ring-inset focus:ring-(--color-primary) sm:text-sm sm:leading-6"
            />
          </div>
        </div>

        <!-- Email Field -->
        <div>
          <label for="email" class="block text-sm font-medium leading-6 text-(--color-text-primary)">
            Email
          </label>
          <div class="mt-2">
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              required
              class="block w-full rounded-md border border-(--color-border) bg-(--color-background) px-3.5 py-2 text-(--color-text-primary) shadow-sm placeholder:text-(--color-text-muted) focus:ring-2 focus:ring-inset focus:ring-(--color-primary) sm:text-sm sm:leading-6"
            />
          </div>
        </div>

        <!-- Message Field -->
        <div>
          <label for="message" class="block text-sm font-medium leading-6 text-(--color-text-primary)">
            Message
          </label>
          <div class="mt-2">
            <textarea
              name="message"
              id="message"
              rows="4"
              required
              class="block w-full rounded-md border border-(--color-border) bg-(--color-background) px-3.5 py-2 text-(--color-text-primary) shadow-sm placeholder:text-(--color-text-muted) focus:ring-2 focus:ring-inset focus:ring-(--color-primary) sm:text-sm sm:leading-6"
            ></textarea>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <button
            type="submit"
            class="block w-full rounded-md bg-(--color-primary) px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-(--color-primary-hover) focus-visible:outline focus-visible:outline-offset-2 focus-visible:outline-(--color-primary)"
          >
            Send Message
          </button>
        </div>
      </form>
  </div>
</MainLayout>
